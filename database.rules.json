{
    "rules": {
        ".read": "auth != null",
        ".write": "auth != null",
        "users": {
            ".indexOn": [
                "username",
                "email",
                "uid"
            ]
        },
        "rooms": {
            ".indexOn": [
                "hostId",
                "isPublic",
                "createdAt"
            ]
        }
    }
}